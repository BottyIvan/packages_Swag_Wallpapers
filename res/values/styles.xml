<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
    
    <style name="BottySwag" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="BottySwagAbout" parent="android:Theme.Holo.Wallpaper">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:background">@null</item>
        <item name="android:titleTextStyle">?android:textAppearanceMedium</item>
        <item name="android:displayOptions">showTitle|showHome</item>
    </style>

    <style name="Text" parent="@android:style/Widget.ActionButton">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:textColor">@color/bt_colo</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    <style name="BottyCard">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:background">@drawable/card</item>
    </style>

</resources>